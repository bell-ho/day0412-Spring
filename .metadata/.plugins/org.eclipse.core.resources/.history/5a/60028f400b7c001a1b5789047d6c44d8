<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.mapper.BoardMapper">

	<select id="getList" resultType="org.zerock.domain.BoardVo">
	<![CDATA[
		select * from tbl_board02 where bno > 0
		]]>
	</select>
<!--  XML에 사용한 CDATA 부분은 XML에서 부등호를 사용하기 위해서 사용합니다. -->

	<insert id="insert">
		insert into tbl_board02 (bno,title,content,writer)
		values (seq_board02.nextval,#{title},#{content},#{writer})
	</insert>
	
	<insert id="insertSelectKey">
		
		<selectKey keyProperty="bno" order="BEFORE" resultType="long">
			select seq_board.nextval from dual
		</selectKey>
	<!-- 		키를 미리 지정해두고 성공시 전해준다 -->

		insert into tbl_board02 (bno,title,content,writer)
		values (#{bno},#{title},#{content},#{writer})
	</insert>
	
	<select id="read" resultType="org.zerock.domain.BoardVo">
		select * from tbl_board02 where bno = #{bno}
	</select>
	
	<delete id="delete">
		delete from tbl_board02 where bno = #{bno}
	</delete>
	
	<update id="update">
		update tbl_board02 set title = #{title}, content=#{content},writer =#{writer},updateDate = sysdate where bno = #{bno}
	</update>
</mapper>