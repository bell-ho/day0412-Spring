<%@include file="../includes/footer.jsp"%>
<script type="text/javascript">
	$(document).ready(function() {
		var result = '<c:out value="${result}"/>';

		checkModal(result);

		history.replaceState({}, null, null);

		function checkModal(result) {

			if (result === '' || history.state) {
				return;
				//뒤로 가기도 비정상작동(브라우저간의 이동) 으로 속함으로 모든 스택을 날려준다
			}

			if (parseInt(result) > 0) {
				$(".modal-body").html("게시글" + parseInt(result) + "번이 등록됨");
				// 				성공을하면 .modal-body 를 바꿔서 "게시글"+parseInt(result)+"번이 등록됨" 이걸로 모달창이 뜨게됨
			}
			$("#myModal").modal("show");

		}
		$("#regBtn").on("click", function() {
			self.location = "/board/register";
		});

		var actionForm = $("#actionForm");
		$(".paginate_button a").on("click",funtion(e){

			e.preventDefault();

			console.log('click');

			alert(actionForm.find("input[name='pageNum']").val());
			
			actionForm.submit();
		});
	});
</script>